<div class="card text-bg-secondary" style="width: 18rem;">
    <h5 class="card-header">
        @Title
    </h5>
    <div class="card-body">
        <h6 class="card-title">@Subtitle</h6>
        <p class="card-text">@Description</p>
        <a href="@UrlLink" target="_blank" class="btn btn-sm btn-primary">Hosted Link</a>
        <a href="@RepoLink" target="_blank" class="btn btn-sm btn-success">Repo Link</a>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string? Title { get; set; } = string.Empty;

    [Parameter]
    public string? Subtitle { get; set; } = string.Empty;
    
    [Parameter]
    public string? Description { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string? UrlLink { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string? RepoLink { get; set; } = string.Empty;
}